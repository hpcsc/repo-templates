#!/usr/bin/env bash

set -eo pipefail

function get_os() {
    local os=$(uname -s)
    case "${os}" in
        Linux*)     echo linux;;
        Darwin*)    echo macos;;
        *)          (>&2 echo "unsupported OS: ${os}" && exit 1)
    esac
}

function get_download_url() {
    local version="$1"
    read -r os

    curl -s "https://api.github.com/repos/{{cookiecutter.target_github_owner}}/{{cookiecutter.target_github_repo}}/releases/tags/${version}" | \
        jq -r '.assets[] |
                    select(.name | contains("{{cookiecutter.target_github_repo}}") and contains("'${os}'")) |
                    .browser_download_url'
}

function download() {
    local install_path="$1"

    read -r url

    mkdir -p ${install_path}/bin

    echo "Download from ${url} to ${install_path}"
    curl -L "${url}" -o "${install_path}/bin/{{cookiecutter.target_github_repo}}"
    chmod +x "${install_path}/bin/{{cookiecutter.target_github_repo}}"
}

# append `v` to version number. `v` was stripped off when doing `asdf list-all` for compatibility with `asdf latest`
VERSION="v${ASDF_INSTALL_VERSION}"
get_os | \
    get_download_url "${VERSION}" | \
    download "${ASDF_INSTALL_PATH}"
